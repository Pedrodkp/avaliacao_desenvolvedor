<p id="notice"><%= notice %></p>

<h1>Listing Sales</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Description</th>
      <th>Price</th>
      <th>Amount</th>
      <th>Address</th>
      <th>Furnisher</th>
      <th>Source file</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.customer %></td>
        <td><%= sale.description %></td>
        <td><%= sale.price %></td>
        <td><%= sale.amount %></td>
        <td><%= sale.address %></td>
        <td><%= sale.furnisher %></td>
        <td><%= sale.source_file %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Import Sales</h3>
<%= form_tag import_sales_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Upload Sales" %>
<% end %>  

<%= link_to 'New Sale', new_sale_path %>
